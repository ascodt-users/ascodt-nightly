CC=gcc
CXX=g++
RM=rm -f
CPPFLAGS= -Icomponents/java -Isrc -I/usr/lib/jvm/java-6-openjdk/include -I/usr/lib/jvm/java-6-openjdk/include/linux -fPIC
LDFLAGS=
LDLIBS=

SRCS= components/java/de/tum/ExampleComponentAbstractImplementation.cpp src/de/tum/ExampleComponentImplementation.cpp components/java/de/tum/ExampleComponentJNIProxy.cpp 
OBJS=$(subst .cpp,.o,$(SRCS))

all: libExampleComponent.so

libExampleComponent.so: $(OBJS)
	$(CXX) -shared $(OBJS) -o native/libExampleComponent.so

clean:
	$(RM) $(OBJS)

dist-clean: clean
	$(RM) libExampleComponent.so
